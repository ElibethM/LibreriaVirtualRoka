<CENTER><h1>Listado de clientes</h1></CENTER>

<CENTER><table>
  <thead>
    <tr>
      <th>Rfc</th>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Direccion</th>
      <th>Facebook</th>
      <th>Linkedin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.rfc %></td>
        <td><%= client.nombre %></td>
        <td><%= client.telefono %></td>
        <td><%= client.email %></td>
        <td><%= client.direccion %></td>
        <td><%= client.facebook %></td>
        <td><%= client.linkedIn %></td>
        <td><%= link_to 'Ver', client %></td>
        <td><%= link_to 'Editar', edit_client_path(client) %></td>
        <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></CENTER>

<br>

<CENTER><%= link_to 'Nuevo Cliente', new_client_path %></CENTER>
