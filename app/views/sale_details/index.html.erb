<CENTER><h1>Listado de Detalles Ventas</h1></CENTER>

<CENTER><table>
  <thead>
    <tr>
      <th>Sale</th>
      <th>Book</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Descuento</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sale_details.each do |sale_detail| %>
      <tr>
        <td><%= sale_detail.sale_id %></td>
        <td><%= sale_detail.book_id %></td>
        <td><%= sale_detail.cantidad %></td>
        <td><%= sale_detail.precio %></td>
        <td><%= sale_detail.descuento %></td>
        <td><%= sale_detail.total %></td>
        <td><%= link_to 'Ver', sale_detail %></td>
        <td><%= link_to 'Editar', edit_sale_detail_path(sale_detail) %></td>
        <td><%= link_to 'Eliminar', sale_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></CENTER>

<br>

