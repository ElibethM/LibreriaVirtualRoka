<CENTER><h1>Listado Detalles de Pedidos</h1></CENTER>

<CENTER><table>
  <thead>
    <tr>
      <th>Pedido</th>
      <th>Libro</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @detail_orders.each do |detail_order| %>
      <tr>
        <td><%= detail_order.order_id %></td>
        <td><%= detail_order.book_id %></td>
        <td><%= detail_order.cantidad %></td>
        <td><%= link_to 'Ver', detail_order %></td>
        <td><%= link_to 'Editar', edit_detail_order_path(detail_order) %></td>
        <td><%= link_to 'Eliminar', detail_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></CENTER>

<br>

<CENTER><%= link_to 'Nuevo detalle Pedido', new_detail_order_path %></CENTER>
