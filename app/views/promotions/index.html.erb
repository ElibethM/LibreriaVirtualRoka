<CENTER><h1>Listado de promociones</h1></CENTER>

<CENTER><table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Employee</th>
      <th>Fecha</th>
      <th>Mediocomunicacion</th>
      <th>Acuerdo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= promotion.client_id %></td>
        <td><%= promotion.employee_id %></td>
        <td><%= promotion.fecha %></td>
        <td><%= promotion.medioComunicacion %></td>
        <td><%= promotion.acuerdo %></td>
        <td><%= link_to 'Ver', promotion %></td>
        <td><%= link_to 'Editar', edit_promotion_path(promotion) %></td>
        <td><%= link_to 'Eliminar', promotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></CENTER>

<br>

<CENTER><%= link_to 'Nueva Promocion', new_promotion_path %></CENTER>
