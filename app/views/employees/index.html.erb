<CENTER><h1>Listado de Empleados</h1></CENTER>

<CENTER><table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Usuario</th>
      <th>Password</th>
      <th>Email</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Meta</th>
      <th>Gerente</th>
      <th>Vendedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.nombre %></td>
        <td><%= employee.usuario %></td>
        <td><%= employee.password %></td>
        <td><%= employee.email %></td>
        <td><%= employee.direccion %></td>
        <td><%= employee.telefono %></td>
        <td><%= employee.meta %></td>
        <td><%= employee.gerente %></td>
        <td><%= employee.vendedor %></td>
        <td><%= link_to 'Ver', employee %></td>
        <td><%= link_to 'Editar', edit_employee_path(employee) %></td>
        <td><%= link_to 'Eliminar', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></CENTER>

<br>

<CENTER><%= link_to 'Nuevo Empleado', new_employee_path %></CENTER>
