<CENTER><h1>Listado de Pedidos</h1></CENTER>

<CENTER><table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Client</th>
      <th>Fechapedido</th>
      <th>Fechaparaentregar</th>
      <th>Fechaentrega</th>
      <th>Direccion</th>
      <th>Cancelado</th>
      <th>Enespera</th>
      <th>Entregado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.employee_id %></td>
        <td><%= order.client_id %></td>
        <td><%= order.fechaPedido %></td>
        <td><%= order.fechaParaEntregar %></td>
        <td><%= order.fechaEntrega %></td>
        <td><%= order.direccion %></td>
        <td><%= order.cancelado %></td>
        <td><%= order.enEspera %></td>
        <td><%= order.entregado %></td>
        <td><%= link_to 'Ver', order %></td>
        <td><%= link_to 'Editar', edit_order_path(order) %></td>
        <td><%= link_to 'Eliminar', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></CENTER>

<br>

<CENTER><%= link_to 'Nuevo Pedido', new_order_path %></CENTER>
